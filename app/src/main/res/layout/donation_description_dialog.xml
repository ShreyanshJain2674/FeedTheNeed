<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#efefef"
        android:layout_marginHorizontal="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="15dp"
                    android:text="Pickup Time"
                    android:textColor="#000000"
                    android:textSize="12dp"
                    android:fontFamily="@font/ubuntu_med"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/itemPickedTimeVol"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="15dp"
                    android:text="Saturday, Jan 15, 2022"
                    android:textColor="#414141"
                    android:textSize="12dp"
                    android:typeface="normal"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView5" />

                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="2dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="22dp"
                    android:background="#909090"
                    app:layout_constraintStart_toEndOf="@+id/itemPickedTimeVol"
                    app:layout_constraintTop_toBottomOf="@id/textView5" />

                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/helveticaneue"
                    android:text="9:00 am"
                    android:textColor="#909090"
                    android:textSize="12dp"
                    app:layout_constraintStart_toEndOf="@+id/imageView4"
                    app:layout_constraintTop_toBottomOf="@id/textView5" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="10dp"
                    android:layout_height="12.5dp"
                    android:layout_marginLeft="19.5dp"
                    android:layout_marginTop="11.25dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/itemPickedTimeVol"
                    app:srcCompat="@drawable/location" />

                <TextView
                    android:id="@+id/itemLocationVol"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginLeft="7.5dp"
                    android:layout_marginTop="10dp"
                    android:text="Modeltown, Bareilly"
                    android:textColor="#414141"
                    android:textSize="12dp"
                    android:typeface="normal"
                    app:layout_constraintStart_toEndOf="@+id/imageView5"
                    app:layout_constraintTop_toBottomOf="@+id/itemPickedTimeVol" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:text="1.2 KM away"
                    android:textColor="#B4B4B4"
                    android:textSize="11dp"
                    android:typeface="normal"
                    app:layout_constraintStart_toEndOf="@+id/itemLocationVol"
                    app:layout_constraintTop_toBottomOf="@+id/itemPickedTimeVol" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/itemTitleVol"
                android:layout_marginTop="14dp"
                android:layout_width="160dp"
                android:layout_height="30dp"
                android:text="Title of Donation"
                android:background="@drawable/edittext_border_black"
                android:gravity="center"
                android:fontFamily="@font/ubuntu_reg"
                android:textSize="12dp"
                />


            <ImageView
                android:id="@+id/feedImageVol"
                android:layout_width="match_parent"
                android:layout_height="140dp"
                android:layout_marginTop="12dp"
                android:layout_marginHorizontal="20dp"
                android:background="#E0E0E0"
                android:src="@drawable/back3"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="16dp"
                android:layout_marginTop="12dp"
                android:paddingLeft="17dp"
                android:text="Description"
                android:gravity="center_vertical"
                android:textColor="#757575"
                android:textSize="12dp"
                android:fontFamily="@font/ubuntu_med"
                android:visibility="gone"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginHorizontal="20dp"
                android:layout_marginTop="12dp"
                android:background="@drawable/edittext_border_black"
                android:fontFamily="@font/ubuntu_med"
                android:gravity="center_vertical"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                android:scrollbars="vertical"
                android:text="Books for career in medical entrance
exam,NEET. Essential books and
previous year examination papers
available.Books for career in medical entrance
exam,NEET. Essential books and
previous year examination papers
available.Books for career in medical entrance
exam,NEET. Essential books and
previous year examination papers
available.Books for career in medical entrance
exam,NEET. Essential books and
previous year examination papers
available."
                android:textColor="#727272"
                android:textSize="12dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/cancelDialog"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:text="Cancel"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/ubuntu_med"
                android:textColor="#A01F62"
                android:textSize="18dp"
                android:background="@drawable/edittext_back_ordering"

                />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>