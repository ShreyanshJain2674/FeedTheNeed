<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back1"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F7F7F7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue"
        android:text="Feed The Need."
        android:textColor="#A01F62"
        android:textSize="22dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/ubuntu_reg"
            android:text="Serve. Spread. Connect. Educate."
            android:textColor="#ECECEC"
            android:textSize="25dp"
            android:layout_marginBottom="10dp"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="340dp"
            android:layout_height="406dp"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="#92FFFFFF"
            app:cardElevation="0dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:layout_width="198dp"
                    android:layout_height="33dp"
                    android:gravity="center"
                    android:text="Welcome"
                    android:fontFamily="@font/ubuntu_med"
                    android:textSize="22dp"
                    android:textColor="#A01F62"
                    android:layout_marginTop="29dp"
                    android:layout_marginHorizontal="71dp"
                    />
                <TextView
                    android:layout_width="60dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="6dp"
                    android:text="Email"
                    android:textSize="12dp"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:fontFamily="@font/ubuntu_med"
                    />
                <EditText
                    android:id="@+id/editTextTextPersonName"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_broder"
                    android:hint="Enter your email"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical"
                    android:typeface="sans"
                    android:textSize="14dp"
                    />
                <TextView
                    android:layout_width="56dp"
                    android:layout_height="16dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="17dp"
                    android:text="Password"
                    android:gravity="center_vertical"
                    android:textColor="#000"
                    android:textSize="12dp"
                    android:fontFamily="@font/ubuntu_med"
                    />

                <EditText
                    android:id="@+id/editTextTextPersonName2"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/edittext_broder"
                    android:hint="Enter the password"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="8dp"
                    android:gravity="center_vertical"
                    android:typeface="sans"
                    android:textSize="14dp"
                    android:inputType="textPassword"
                    />
                <Button
                    android:id="@+id/button"
                    android:layout_width="302dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="30dp"
                    android:layout_marginHorizontal="18dp"
                    android:text="Log in"
                    android:textColor="#EEEEEE"
                    android:fontFamily="@font/ubuntu_med"
                    android:background="@drawable/button_background"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="18dp"
                    android:textColor="#FFFFFF"
                    android:text="OR"
                    android:gravity="center"
                    android:fontFamily="@font/ubuntu_reg"
                    android:textSize="18dp"
                    android:layout_gravity="center_horizontal"/>
                <Button
                    android:id="@+id/textView"
                    android:layout_width="308dp"
                    android:layout_height="45dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginHorizontal="18dp"
                    android:background="@drawable/google_button"
                    />
            </LinearLayout>

        </androidx.cardview.widget.CardView>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>