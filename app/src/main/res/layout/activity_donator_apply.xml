<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donator.DonatorApply">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#A01F62"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F7F7F7"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneue"
            android:text="Feed The Need."
            android:textColor="#A01F62"
            android:textSize="25dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_nav2"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/face"
            app:civ_border_color="#A01F62"
            app:civ_border_width="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            />


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="80dp"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_height="match_parent"
                    android:background="#fff"
                    app:cardCornerRadius="8dp"
                    android:elevation="5dp"
                    android:layout_marginBottom="60dp"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        >

                        <TextView
                            android:layout_width="195dp"
                            android:layout_height="33dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:text="Register Donation"
                            android:fontFamily="@font/ubuntu_med"
                            android:textSize="22dp"
                            android:textColor="#A01F62"
                            android:layout_marginTop="21dp"
                            android:layout_marginHorizontal="71dp"
                            />
                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="14dp"
                            android:text="Item Title"
                            android:textSize="12dp"
                            android:gravity="center_vertical"
                            android:textColor="#000"
                            android:fontFamily="@font/ubuntu_med"
                            />
                        <EditText
                            android:id="@+id/desc_edit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittext_border_black"
                            android:hint="Books for children"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:gravity="center_vertical"
                            android:typeface="sans"
                            android:textSize="14dp"
                            />
                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="17dp"
                            android:text="Item Description"
                            android:gravity="center_vertical"
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:fontFamily="@font/ubuntu_med"
                            />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="100dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittext_border_black"
                            android:gravity="center_vertical"
                            android:hint="I am offering five books of english language subject which contain rhymes, alphabets and various image teachings. Suitable for small children."
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:scrollbarFadeDuration="500"
                            android:scrollbars="vertical"
                            android:textSize="14dp"
                            android:typeface="sans" />

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="17dp"
                            android:text="Image"
                            android:gravity="center_vertical"
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:fontFamily="@font/ubuntu_med"
                            />
                        <ImageView
                            android:id="@+id/imageView"
                            android:layout_marginTop="7dp"
                            android:layout_width="match_parent"
                            android:layout_height="200dp"
                            android:layout_marginHorizontal="20dp"
                            android:src="@drawable/back1"/>


                        <Button
                            android:layout_width="302dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginHorizontal="18dp"
                            android:text="Add Image"
                            android:id="@+id/addImage"
                            android:textColor="#A01F62"
                            android:fontFamily="@font/ubuntu_reg"
                            android:background="@drawable/button_line_background"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:text="Time of collection"
                            android:gravity="center_vertical"
                            android:textColor="#000"
                            android:textSize="12dp"
                            android:fontFamily="@font/ubuntu_med"
                            />

                        <TextView
                            android:id="@+id/pickedtime_txt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittext_border_black"
                            android:hint="22 Feb, Tuesday, 4:00 PM"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:gravity="center_vertical"
                            android:typeface="sans"
                            android:textSize="14dp"
                            />

                        <Button
                            android:layout_width="302dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="13dp"
                            android:layout_marginHorizontal="18dp"
                            android:text="PICK"
                            android:id="@+id/pick"
                            android:textColor="#A01F62"
                            android:fontFamily="@font/ubuntu_reg"
                            android:background="@drawable/button_line_background"
                            />


                        <Button
                            android:layout_width="302dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="17dp"
                            android:layout_marginHorizontal="18dp"
                            android:text="Register"
                            android:textColor="#fff"
                            android:id="@+id/post"
                            android:fontFamily="@font/ubuntu_reg"
                            android:background="@drawable/button_background"
                            android:layout_marginBottom="40dp"
                            />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>