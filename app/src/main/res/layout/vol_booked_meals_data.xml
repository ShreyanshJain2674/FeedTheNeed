<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/restaurantName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Hotel Taj"
        android:textSize="32sp"/>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No. Of meals:  "
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/noOfMeals"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="10"
            android:textSize="24sp"/>
    </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick UP time:  "
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/itemPickedTimeVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="11:00 A.M."
                android:textSize="16sp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Restaurant Number:  "
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/restaurantNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="1232323234"
            android:textSize="16sp"/>
    </LinearLayout>






    <TextView
        android:layout_gravity="center"
        android:id="@+id/StatusVolMeal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Booked"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/itemVerificationVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Verification"
        android:layout_gravity="center"
        android:textSize="16sp"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/restauPic"/>






</LinearLayout>