<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Donator.DonatorHome">

    <FrameLayout
        android:id="@+id/flFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constrained"
        android:layout_marginBottom="62dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/constrained"
        android:background="#FAFAFA"
        >
        <ImageView
            android:id="@+id/feed_frag"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_marginTop="19.7dp"
            android:layout_marginLeft="40.7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:src="@drawable/feed"
            />
        <ImageView
            android:id="@+id/items_frag"
            android:layout_width="22.5dp"
            android:layout_height="22.5dp"
            android:layout_marginTop="19.7dp"
            android:layout_marginRight="40.7dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:src="@drawable/verify"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/apply_frag"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:fontFamily="@font/ubuntu_reg"
        android:text="+ Donate"
        app:layout_constraintBottom_toBottomOf="@id/constrained"
        android:layout_marginBottom="40dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/round_corner_button"
        android:textColor="#fff"
        />

</androidx.constraintlayout.widget.ConstraintLayout>