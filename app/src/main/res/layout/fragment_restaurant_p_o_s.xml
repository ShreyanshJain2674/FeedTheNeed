<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restaurant.RestaurantPOSFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#F7F7F7"
            android:id="@+id/imageview10"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/helveticaneue"
            android:text="Feed The Need."
            android:textColor="#A01F62"
            android:textSize="25dp"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="19dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profile_nav1"
            android:layout_width="38dp"
            android:layout_height="38dp"
            tools:src="@drawable/face"
            app:civ_border_color="#A01F62"
            app:civ_border_width="1dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="12dp"
            android:layout_marginRight="12dp"
            />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_restaurant"
            android:layout_marginTop="60dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:layout_width="340dp"
                    android:layout_marginTop="20dp"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="60dp"
                    android:elevation="0dp"
                    app:cardBackgroundColor="#A9FFFFFF"
                    app:cardCornerRadius="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/restaur_name"
                            android:layout_width="195dp"
                            android:layout_height="33dp"
                            android:layout_gravity="center"
                            android:layout_marginHorizontal="71dp"
                            android:layout_marginTop="21dp"
                            android:fontFamily="@font/ubuntu_med"
                            android:gravity="center"
                            android:text="Domino's Pizza"
                            android:textColor="#A01F62"
                            android:textSize="22dp" />


                        <TextView
                            android:layout_width="60dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="14dp"
                            android:fontFamily="@font/ubuntu_med"
                            android:gravity="center_vertical"
                            android:text="Full Name"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/name_edit"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittext_border_black"
                            android:gravity="center_vertical"
                            android:hint="Please enter you full name"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textSize="14dp"
                            android:typeface="sans" />

                        <TextView
                            android:layout_width="56dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="17dp"
                            android:fontFamily="@font/ubuntu_med"
                            android:gravity="center_vertical"
                            android:text="Phone Number"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <EditText
                            android:id="@+id/phn_txt"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/edittext_border_black"
                            android:gravity="center_vertical"
                            android:hint="Enter the phone Number"
                            android:inputType="phone"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textSize="14dp"
                            android:typeface="sans" />

                        <TextView
                            android:layout_width="106dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="17dp"
                            android:fontFamily="@font/ubuntu_med"
                            android:gravity="center_vertical"
                            android:text="Meal Description"
                            android:textColor="#000"
                            android:textSize="12dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="32dp"
                            android:paddingHorizontal="10dp"
                            >
                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                app:cardBackgroundColor="#FFFFFF"
                                app:cardCornerRadius="10dp"
                                >

                                <LinearLayout
                                    android:layout_width="311dp"
                                    android:layout_height="107dp"
                                    android:layout_marginLeft="10dp"
                                    android:layout_marginTop="5dp"
                                    android:layout_marginBottom="5dp"
                                    android:gravity="center_vertical">

                                    <androidx.cardview.widget.CardView
                                        android:layout_width="90dp"
                                        android:layout_height="90dp"
                                        android:background="#fff"
                                        app:cardCornerRadius="7dp">

                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">

                                            <ImageView
                                                android:id="@+id/meal_img"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                android:src="@drawable/pizza" />
                                        </LinearLayout>

                                    </androidx.cardview.widget.CardView>

                                    <LinearLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:layout_gravity="left"
                                        android:gravity="center_vertical"
                                        android:layout_marginLeft="14dp"
                                        android:orientation="vertical">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="21dp"
                                            android:layout_gravity="left"
                                            android:fontFamily="@font/ubuntu_med"
                                            android:gravity="center"
                                            android:text="Meal Provided"
                                            android:textColor="#A01F62"
                                            android:textSize="18dp" />

                                        <TextView
                                            android:id="@+id/meal_detail"
                                            android:layout_width="wrap_content"
                                            android:layout_height="18dp"
                                            android:layout_gravity="left"
                                            android:layout_marginTop="7dp"
                                            android:fontFamily="@font/ubuntu_med"
                                            android:gravity="center"
                                            android:text="Onion Cheese Pizza + Fries"
                                            android:textColor="#414141"
                                            android:textSize="14dp" />

                                        <TextView
                                            android:id="@+id/meal_cost"
                                            android:layout_width="wrap_content"
                                            android:layout_height="18dp"
                                            android:layout_gravity="left"
                                            android:layout_marginTop="5dp"
                                            android:fontFamily="@font/helveticaneue"
                                            android:gravity="center"
                                            android:text="Rs. 59 INR"
                                            android:textColor="#414141"
                                            android:textSize="14dp" />


                                    </LinearLayout>
                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>



                        <TextView
                            android:layout_width="106dp"
                            android:layout_height="16dp"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/ubuntu_med"
                            android:gravity="center_vertical"
                            android:text="No. Of Meals"
                            android:textColor="#000"
                            android:textSize="12dp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="20dp"
                            android:layout_marginTop="8dp">

                            <!--                            <Spinner-->
                            <!--                                android:layout_width="170dp"-->
                            <!--                                android:layout_height="40dp"-->
                            <!--                                android:background="@drawable/edittext_border_black"-->
                            <!--                                android:gravity="center_vertical"-->
                            <!--                                android:paddingHorizontal="10dp"-->
                            <!--                                android:paddingVertical="8dp"-->
                            <!--                                android:textSize="14dp"-->
                            <!--                                android:typeface="sans" />-->


                            <!--                            <Button-->
                            <!--                                android:layout_width="109dp"-->
                            <!--                                android:layout_height="40dp"-->
                            <!--                                android:layout_marginLeft="21dp"-->
                            <!--                                android:background="@drawable/button_line_background"-->
                            <!--                                android:fontFamily="@font/ubuntu_reg"-->
                            <!--                                android:text="Add Meal"-->
                            <!--                                android:textColor="#A01F62" />-->

                            <EditText
                                android:id="@+id/no_edit"
                                android:layout_width="match_parent"
                                android:layout_height="40dp"
                                android:background="@drawable/edittext_border_black"
                                android:gravity="center_vertical"
                                android:hint="Enter no of Meals"
                                android:inputType="phone"
                                android:paddingHorizontal="10dp"
                                android:paddingVertical="8dp"
                                android:textSize="14dp"
                                android:typeface="sans" />
                        </LinearLayout>

                        <Button
                            android:id="@+id/post"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="18dp"
                            android:layout_marginTop="17dp"
                            android:layout_marginBottom="20dp"
                            android:background="@drawable/button_background"
                            android:fontFamily="@font/ubuntu_reg"
                            android:text="Book Meal"
                            android:textColor="#fff" />

                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>