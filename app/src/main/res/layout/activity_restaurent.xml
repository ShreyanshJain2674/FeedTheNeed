<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Restaurant.RestaurantActivity">

    <FrameLayout
        android:id="@+id/flFragmentRestaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/constrained"
        android:layout_marginBottom="62dp"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="62dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/constrained"
        android:background="#FAFAFA"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="3"
            >

            <!--1st option to be implemented here -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/feed_restaur"
                    android:layout_width="22.5dp"
                    android:layout_height="22.5dp"
                    android:src="@drawable/feed"
                    />
            </LinearLayout>

            <!--2nd Point to be implemeted -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >
                <ImageView
                    android:id="@+id/meal_restaur"
                    android:layout_width="24.5dp"
                    android:layout_height="24.5dp"
                    android:src="@drawable/restaurant_icon"
                    />
            </LinearLayout>

            <!--Third option to be implementation -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/pos_restaur"
                    android:layout_width="24.5dp"
                    android:layout_height="24.5dp"
                    android:src="@drawable/bookings"
                    />
            </LinearLayout>
        </LinearLayout>





    </androidx.constraintlayout.widget.ConstraintLayout>

