<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEFEF"
    android:layout_marginHorizontal="7dp"
    android:layout_marginVertical="4dp">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp"
        android:background="#fff"
        app:cardElevation="3dp"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="15dp"
            >

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:text="Quest Id"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:textSize="12dp"
                android:typeface="normal"
                android:textColor="#9E9E9E"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="17dp"
                android:text="#1234"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="5dp"
                android:textColor="#000"
                app:layout_constraintStart_toEndOf="@id/textView6"
                app:layout_constraintTop_toTopOf="parent" />



            <!--  There are three backgrounds booked (processing background), collected(Distributed_background), cancelled (Cancelled_background), verified (Collected_background)
                Text Colors to be used with them are ##EBAF00, #4285F4 and #0F9866 and #4285F4 respectively-->
            <TextView
                android:id="@+id/status_education_p1"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="Quest Full"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"
                android:textColor="#D50000"
                android:paddingHorizontal="7dp"
                android:background="@drawable/cancelled_background"
                app:layout_constraintStart_toEndOf="@id/textView7"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/date_education_p1"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:text="Saturday, Jan 15, 2022"
                android:textColor="#414141"
                android:textSize="12dp"
                android:typeface="normal"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="18dp"
                android:background="#909090"
                app:layout_constraintStart_toEndOf="@+id/date_education_p1"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="15dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/helveticaneue"
                android:text="9:00 am"
                android:textColor="#909090"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@+id/imageView4"
                app:layout_constraintTop_toBottomOf="@id/textView6" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/LeadPic"
                android:layout_marginLeft="20dp"
                android:src="@drawable/face"
                app:civ_border_color="#C4C4C4"
                app:civ_border_width="1dp"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="28dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/name_education_p11"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginTop="4dp"
                android:fontFamily="sans-serif-medium"
                android:text="Aryan Verma"
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintEnd_toEndOf="@id/LeadPic"
                app:layout_constraintStart_toStartOf="@id/LeadPic"
                app:layout_constraintTop_toBottomOf="@+id/LeadPic" />
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="75dp"
                android:src="@drawable/ic_call_black_24dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_education_p11"/>
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="35dp"
                android:src="@drawable/location_black"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/name_education_p11"/>

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"
                android:text="Lead Name :"
                android:textColor="#000000"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/date_education_p1" />

            <TextView
                android:id="@+id/name_education_p1"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="7dp"
                android:layout_marginTop="12dp"
                android:fontFamily="sans-serif-medium"
                android:text="Aryan Verma"
                android:textColor="#909090"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@id/textView16"
                app:layout_constraintTop_toBottomOf="@+id/date_education_p1" />



            <TextView
                android:id="@+id/textView14"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="5dp"
                android:fontFamily="sans-serif-medium"
                android:text="Left Vacancies :"
                android:textColor="#000"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <!-- Set meals in this box-->
            <TextView
                android:id="@+id/leftVol_education_p1"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:paddingHorizontal="10dp"
                android:background="@drawable/button_line_background"
                android:fontFamily="sans-serif-medium"
                android:text="3"
                android:textColor="#A01F62"
                android:textSize="12dp"
                app:layout_constraintStart_toEndOf="@id/textView14"
                app:layout_constraintTop_toBottomOf="@+id/textView16" />

            <Button
                android:id="@+id/addComment"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/button_background"
                android:fontFamily="@font/ubuntu_med"
                android:paddingHorizontal="10dp"
                android:text="Participate"
                android:textColor="#f1f1f1"
                android:textSize="12dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView14"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>