<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="#00000000"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#efefef"
        android:layout_marginHorizontal="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginTop="30dp"
                android:gravity="center"
                >
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/verify"
                    />
                <TextView
                    android:layout_width="160dp"
                    android:layout_height="36dp"
                    android:text="VERIFICATION"
                    android:typeface="normal"
                    android:textSize="22dp"
                    android:gravity="center"
                    android:textColor="#000"
                    />
            </LinearLayout>


            <ImageView
                android:id="@+id/verification_imv"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="20dp"
                android:background="#E0E0E0"
                />

            <TextView
                android:id="@+id/select_imv"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_marginTop="22dp"
                android:text="+ Add Images from device"
                android:gravity="center_vertical"
                android:textColor="#0082B4"
                android:textSize="12dp"
                android:fontFamily="@font/ubuntu_med"
                />

            <TextView
                android:id="@+id/count1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="22dp"
                android:text="Total Images to be uploaded : 6"
                android:gravity="center_vertical"
                android:textColor="#727272"
                android:textSize="12dp"
                android:fontFamily="@font/ubuntu_med"
                android:background="@drawable/edittext_border_black"
                android:paddingHorizontal="10dp"
                android:paddingVertical="5dp"
                />

            <Button
                android:id="@+id/verification_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginHorizontal="30dp"
                android:text="Verify"
                android:layout_marginTop="30dp"
                android:fontFamily="@font/ubuntu_med"
                android:textColor="#FFFFFF"
                android:textSize="18dp"
                android:background="@drawable/button_background"

                />
            <Button
                android:id="@+id/share_tv"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:gravity="center"
                android:layout_marginHorizontal="30dp"
                android:text="Share as post"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/ubuntu_med"
                android:textColor="#A01F62"
                android:textSize="18dp"
                android:background="@drawable/edittext_back_ordering"
                android:visibility="gone"

                />



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>