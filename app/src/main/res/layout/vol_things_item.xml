<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="16dp"
    android:orientation="vertical">

    <TextView
        android:id="@+id/itemTitleVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Jacket"
        android:textSize="24sp"/>
    <TextView
        android:layout_marginStart="16dp"
        android:textSize="16sp"
        android:id="@+id/itemLocationVol"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Jaipur"/>

    <ImageView
        android:id="@+id/feedImageVol"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pick UP time:  "
                android:textSize="16sp"/>

            <TextView
                android:id="@+id/itemPickedTimeVol"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="11:00 A.M."
                android:textSize="16sp"/>
        </LinearLayout>





    </LinearLayout>


    <TextView
        android:layout_gravity="center"
        android:id="@+id/itemStatusVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Pending"
        android:textSize="24sp"/>

    <Button
        android:id="@+id/itemVerificationVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Verification"
        android:visibility="gone"
        android:layout_gravity="center"
        android:textSize="16sp"/>

    <Button
        android:id="@+id/itemBookingVol"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Book this"
        android:layout_gravity="center"
        android:textSize="16sp"/>





</LinearLayout>