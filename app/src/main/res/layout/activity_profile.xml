<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A01F62"
    tools:context=".ProfileActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#F7F7F7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/helveticaneue"
        android:text="Feed The Need."
        android:textColor="#A01F62"
        android:textSize="25dp"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="19dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="80dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            >
            <androidx.cardview.widget.CardView
                android:layout_width="340dp"
                android:layout_height="match_parent"
                android:background="#fff"
                app:cardCornerRadius="8dp"
                android:elevation="5dp"
                android:layout_marginBottom="60dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="195dp"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="71dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/ubuntu_med"
                        android:gravity="center"
                        android:text="Create Profile"
                        android:textColor="#A01F62"
                        android:textSize="22dp" />

                    <TextView
                        android:layout_width="60dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="14dp"
                        android:fontFamily="@font/ubuntu_med"
                        android:gravity="center_vertical"
                        android:text="Full Name"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/entername"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_border_black"
                        android:gravity="center_vertical"
                        android:hint="Please enter you full name"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="8dp"
                        android:textSize="14dp"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/ubuntu_med"
                        android:gravity="center_vertical"
                        android:text="Phone Number"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/enterNum"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_border_black"
                        android:gravity="center_vertical"
                        android:hint="Enter the mobile number"
                        android:inputType="phone"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="8dp"
                        android:textSize="14dp"
                        android:typeface="sans" />

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="17dp"
                        android:fontFamily="@font/ubuntu_med"
                        android:gravity="center_vertical"
                        android:text="OTP"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="8dp">

                        <EditText
                            android:id="@+id/enterotp"
                            android:layout_width="170dp"
                            android:layout_height="40dp"
                            android:background="@drawable/edittext_border_black"
                            android:gravity="center_vertical"
                            android:hint="Enter the OTP"
                            android:inputType="number"
                            android:maxLength="6"
                            android:paddingHorizontal="10dp"
                            android:paddingVertical="8dp"
                            android:textSize="14dp"
                            android:typeface="sans" />

                        <Button
                            android:id="@+id/sendOtp"
                            android:layout_width="109dp"
                            android:layout_height="40dp"
                            android:layout_marginLeft="21dp"
                            android:background="@drawable/button_line_background"
                            android:fontFamily="@font/ubuntu_reg"
                            android:text="Send OTP"
                            android:textColor="#A01F62" />
                    </LinearLayout>

                    <Button
                        android:layout_marginTop="12dp"
                        android:id="@+id/verifyOtp"
                        android:layout_width="109dp"
                        android:layout_height="40dp"
                        android:background="@drawable/button_line_background"
                        android:fontFamily="@font/ubuntu_reg"
                        android:text="Verify"
                        android:textColor="#A01F62"
                        android:layout_gravity="center"/>

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="29dp"
                        android:layout_marginRight="20dp"
                        android:background="#B1B1B1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="86dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="21dp"
                        android:fontFamily="@font/ubuntu_med"
                        android:gravity="center_vertical"
                        android:text="Your Address"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <EditText
                        android:id="@+id/location"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_border_black"
                        android:gravity="center_vertical"
                        android:hint="ABC Enclave, Siddha Nagar, Bareilly"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="8dp"
                        android:textSize="14dp"
                        android:typeface="sans" />

                    <Button
                        android:id="@+id/location_btn"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="13dp"
                        android:background="@drawable/button_line_background"
                        android:fontFamily="@font/ubuntu_reg"
                        android:text="Auto Detect Location"
                        android:textColor="#A01F62" />

                    <TextView
                        android:layout_width="56dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="15dp"
                        android:fontFamily="@font/ubuntu_med"
                        android:gravity="center_vertical"
                        android:text="Role"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <Spinner
                        android:id="@+id/spinner2"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="20dp"
                        android:layout_marginTop="8dp"
                        android:background="@drawable/edittext_border_black"
                        android:gravity="center_vertical"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="8dp"
                        android:textSize="14dp"
                        android:typeface="sans" />

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="29dp"
                        android:layout_marginRight="20dp"
                        android:background="#B1B1B1"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:layout_width="76dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="22dp"
                        android:fontFamily="@font/ubuntu_med"
                        android:gravity="center_vertical"
                        android:text="Profile Photo"
                        android:textColor="#000"
                        android:textSize="12dp" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="8dp"
                        android:src="@drawable/logo"
                        app:civ_border_color="#696969"
                        app:civ_border_width="2dp" />

                    <TextView
                        android:id="@+id/addFromDevice"
                        android:layout_width="150dp"
                        android:layout_height="16dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="22dp"
                        android:fontFamily="@font/ubuntu_med"
                        android:gravity="center_vertical"
                        android:text="+ Add from device"
                        android:textColor="#0082B4"
                        android:textSize="12dp" />

                    <Button
                        android:id="@+id/next"
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:layout_marginHorizontal="18dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="40dp"
                        android:background="@drawable/button_background"
                        android:fontFamily="@font/ubuntu_reg"
                        android:text="Register"
                        android:textColor="#fff" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>